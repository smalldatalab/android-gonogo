<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.ohmage.pulsus.ProfileActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/connected_account_label"
        android:id="@+id/connectAccountTextView"
        android:gravity="center"
        android:paddingBottom="@dimen/profile_bottom_padding"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enabled_reminders_label"
        android:id="@+id/switch1"
        android:gravity="center"
        android:layout_gravity="center"
        android:switchPadding="@dimen/switch_padding"
        android:paddingBottom="@dimen/profile_bottom_padding"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/complete_baseline_button"
        android:text="@string/complete_baseline_label"
        android:gravity="center"
        android:layout_gravity="center"/>
</LinearLayout>
